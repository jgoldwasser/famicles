!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = @page_title || APP_CONFIG[:site_name]
    %meta{ :content => "text/xhtml; charset=utf-8", "http-equiv" => "content-type" }/
    %meta{ :content => "no", "http-equiv" => "imagetoolbar" }/
    %meta{ :name => "distribution", :content => "all" }/
    %meta{ :name => "robots", :content => "all" }/
    %meta{ :name => "resource-type", :content => "document" }/
    %meta{ :name => "MSSmartTagsPreventParsing", :content => "true" }/
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'niftyCorners'
    //= stylesheet_link_tag 'niftyPrint', :media => 'print'

    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery', 'application'
    = javascript_include_tag 'plugins/nifty'
    = calendar_date_select_includes

    %script{ :type => "text/javascript", :charset => "utf-8" }
      jQuery.noConflict();
      jQuery(document).ready(function(){
      jQuery('textarea').prettyComments({animate: false, maxHeight:300});
      });
      window.onload=function(){
      RoundedTop("div.section", "#FFF", "#adc2c3");
      };
    = javascript_include_tag 'plugins/prettyComments'

  %body
    #container
      #header
        #links
          %ul
            - if logged_in?
              %li
                = link_to 'Logout', logout_path
            - else
              %li
                = link_to 'Login', login_path
              %li
                = link_to 'Signup', signup_path

        - if show_famicle_menu?
          #menu
            %ul{:id => @current_tab, :class => 'menu'}
              %li{:id => 'famicles_tab'}= link_to(current_user.default_famicle.name, famicle_path(current_user.default_famicle))
              %li{:id => 'children_tab'}= link_to("#{current_user.default_famicle.name} Children", famicle_children_path(current_user.default_famicle))
              %li{:id => 'profiles_tab'}= link_to("#{current_user.profile.full_name}'s Profile", profile_path(current_user))
      #content
        = flash_messages
        = yield :layout
      
      #footer
